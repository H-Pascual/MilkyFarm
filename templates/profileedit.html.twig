{% extends 'base.html.twig' %}

{% block title %}Editar Avatar | Perfil
{% endblock %}

{% block principal %}
	<!-- Features Start -->
	<h1>Editar Avatar</h1>
	<div class="container-xxl py-5">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
					<p class="section-title bg-white text-start text-primary pe-3">Profile</p>
					{{ form_errors(form) }}
					{{ form_start(form) }}
					{{ form_row(form.nombre) }}
					{{ form_row(form.email)}}
					{{ form_row(form.user_image)}}
					{{ form_row(form.plainPassword, {
            label: 'Password'
        }) }}
					{{ form_row(form.agreeTerms) }}

					<button type="submit" class="btn btn-success">Editar</button>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Features End -->{% endblock %}
