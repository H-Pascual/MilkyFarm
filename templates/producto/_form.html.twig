{{ form_start(form) }}
    <div class="container">
        <div class="my-custom-class-for-errors">
		    {{ form_errors(form) }}
	    </div>
        <div class="row">
		<div class="col-md-8">
			{{ form_row(form.nombre) }}
		</div>
		<div class="col-md-4">
			{{ form_row(form.imagen) }}
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			{{ form_row(form.precio) }}
		</div>
	</div>
	<div class="row">
		<div class="col-md-4">
			{{ form_row(form.precioAntiguo) }}
		</div>
	</div>
	<div class="row">
		<button class="btn btn-success m-1">{{ button_label|default('Guardar') }}</button>
        <a class="btn btn-danger m-1" href="{{ path('app_producto_index') }}">Volver</a>
	</div>
    </div>
{{ form_end(form) }}
