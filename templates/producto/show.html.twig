{% extends 'base.html.twig' %}

{% block title %}Detalles Producto{% endblock %}

{% block principal %}
    <h1>Producto</h1>
    <img src="{{ asset(producto.getUrlProducto()) }}" alt="{{ producto.nombre }}" width="200">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ producto.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ producto.nombre }}</td>
            </tr>
            <tr>
                <th>Imagen</th>
                <td>{{ producto.imagen }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ producto.precio }}</td>
            </tr>
            <tr>
                <th>PrecioAntiguo</th>
                <td>{{ producto.precioAntiguo }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-secondary py-2" href="{{ path('app_producto_index') }}">Volver</a><br>
    {% if is_granted('ROLE_USER') %}
    {% if producto.usuario.id == usuario.id or is_granted('ROLE_ADMIN') %}
    <a class="btn btn-primary py-2" href="{{ path('app_producto_edit', {'id': producto.id}) }}">Editar</a>
    {{ include('producto/_delete_form.html.twig') }}
    {% endif %}
    {% endif %}
{% endblock %}
