{% extends 'base.html.twig' %}

{% block title %}Detalles Miembro
{% endblock %}

{% block principal %}
	<!-- Principal Content Start -->
	<div class="container-xxl py-5">
		<div class="container">
			<h1>MIEMBRO GALERIA</h1>
			<hr>
			<div class="row align-items-center">
				<div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
					<img src="{{miembro.getUrlMiembros()}}" alt="{{miembro.getNombre()}}" title="{{miembro.getNombre()}}" width="500px">
				</div>
				<div class="col-lg-6">
					<br>Nombre:
					{{miembro.getNombre()}}
					<br>Trabajo:
					{{miembro.getTrabajo()}}
					<br>
					<a class="btn btn-secondary py-2" href="{{ path('app_miembro_index') }}">Volver</a>
					{% if is_granted('ROLE_ADMIN') %}
						<div class="align-items-center">
							<td>
								<a href="{{path('app_miembro_edit', {'id': miembro.id}) }}">
									<button class="btn btn-success pill py-3 px-5 mg-5 m-1">Modificar</button>
								</a>
								{{ include('miembro/_delete_form.html.twig') }}
							</td>
						</div>
					{% endif %}
				</div><br>
			</div>
		</div>
	</div>
{% endblock %}
